<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cs_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"        
        android:text="@string/cs_name_2"
        android:textSize="22sp"        />

    <ImageView
        android:id="@+id/cs_image"
        android:contentDescription="@string/image_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/cs_name"
        android:adjustViewBounds="true"      
        android:scaleType="fitXY"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:src="@drawable/linus_torvalds" />
    
	<ScrollView	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"	    
	    android:paddingLeft="8dp"
	    android:paddingTop="8dp"
	    android:layout_alignTop="@id/cs_image"
	    android:layout_toRightOf="@id/cs_image"
	    android:layout_below="@id/cs_name"     >

    <TextView
        android:id="@+id/cs_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textSize="22sp"       
        android:text="@string/cs_desc_2"        />
    </ScrollView>
    
</RelativeLayout>
